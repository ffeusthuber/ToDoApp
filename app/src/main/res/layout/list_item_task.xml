<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTaskFinishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Task Finish Date"
            app:layout_constraintBottom_toBottomOf="@+id/cbTaskFinished"
            app:layout_constraintStart_toEndOf="@+id/cbTaskFinished" />

        <CheckBox
            android:id="@+id/cbTaskFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Task Title"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cbTaskFinished"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibtnTaskDropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_task_dropdown"
            android:contentDescription="@string/dropdown_taskdetails"
            app:layout_constraintBottom_toBottomOf="@+id/cbTaskFinished"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cbTaskFinished" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>